<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    tools:context="com.mapbook.ui.Register" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical" >

	    <TextView
	        android:id="@+id/register_header"
	        style="@style/wrap"
	        android:layout_alignParentTop="true"
	        android:layout_marginBottom="20dp"
	        android:ems="10"
	        android:gravity="center_horizontal"
	        android:inputType="none"
	        android:padding="20dp"
	        android:text="@string/register"
	        android:textColor="@color/white"
	        android:textSize="45sp" />
	
	    <EditText
	        android:id="@+id/register_username"
	        style="@style/long_textbox"
	        android:layout_below="@+id/register_header"
	        android:hint="@string/username" >
	
	        <requestFocus />
	    </EditText>
	
	    <EditText
	        android:id="@+id/register_password"
	        style="@style/long_textbox"
	        android:layout_below="@+id/register_username"
	        android:hint="@string/password"
	        android:inputType="textPassword" />
	
	    <EditText
	        android:id="@+id/register_confirm_password"
	        style="@style/long_textbox"
	        android:layout_below="@+id/register_password"
	        android:hint="@string/confirm_password"
	        android:inputType="textPassword" />
	
	    <EditText
	        android:id="@+id/register_email"
	        style="@style/long_textbox"
	        android:layout_below="@+id/register_confirm_password"
	        android:hint="@string/email"
	        android:imeOptions="actionDone"
	        android:inputType="textEmailAddress" />
	
	    <Button
	        android:id="@+id/register_signup"
	        style="@style/long_button"
	        android:layout_below="@+id/register_email"
	        android:layout_marginTop="10sp"
	        android:text="@string/signup" />
	    
	    <ProgressBar
	        android:id="@+id/register_loading"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_below="@+id/register_email"
	        android:layout_marginTop="20sp"
	        android:visibility="gone"
	        android:layout_centerHorizontal="true" />
	
	    <Button
	        android:id="@+id/register_signup_facebook"
	        style="@style/long_button"
	        android:layout_below="@+id/register_signup"
	        android:background="#00F"
	        android:text="@string/signup_with_facebook" />
	    
	</RelativeLayout>
	
</ScrollView>